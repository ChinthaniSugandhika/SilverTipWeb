                        function updatetable() {
                            var route = $("#routeid option:selected").text();
                            var kid = $('#kgid').val();
                            var supnum = $("#sup-number option:selected").text();
                            var offid = $("#officerid option:selected").text();

                            var valu = "<tr class='mytras'><td>" + route + "</td><td>" + supnum + "</td><td>" + offid + "</td><td>" + kid + "KG</td></tr>";
                            $('#teacoltable-details').append(valu);
                        }
        </script>
        <style>
                        .mytras {
                            animation-name: example;
                            animation-duration: 1s;
